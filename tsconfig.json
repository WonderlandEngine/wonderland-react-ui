{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "declaration": true,
        "experimentalDecorators": true,
        "jsx": "react",
    },
    "typeRoots": ["./@types"],
    "types": ["jsx"],
    "exclude": ["dist"],
    "include": ["./js/**/*.tsx", "./js/**/*.ts","./js/jsx.d.ts"]
}
