{
    "name": "@wonderlandengine/react-ui",
    "version": "0.3.0",
    "description": "React-based UI in Wonderland Engine.",
    "author": "Wonderland GmbH",
    "main": "dist/index.js",
    "type": "module",
    "types": "dist",
    "module": "dist/index.js",
    "exports": {
        ".": "./dist/index.js",
        "./components": "./dist/components.js"
    },
    "scripts": {
        "build": "tsc",
        "build:dev": "tsc --sourceMap",
        "watch": "tsc --watch --sourceMap",
        "prepack": "npm run build",
        "test": "npm run build && web-test-runner",
        "test:unit": "vitest --run",
        "test:unit:watch": "vitest",
        "test:ci": "npm run build && vitest run && web-test-runner"
    },
    "files": [
        "dist/**/*.d.ts",
        "dist/**/*.js"
    ],
    "homepage": "https://github.com/WonderlandEngine/wonderland-react-ui#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/WonderlandEngine/wonderland-react-ui.git"
    },
    "bugs": {
        "url": "https://github.com/WonderlandEngine/wonderland-react-ui/issues"
    },
    "license": "MIT",
    "prettier": "@wonderlandengine/prettier-config",
    "keywords": [
        "wonderland-engine",
        "react",
        "custom renderer",
        "3d",
        "webgl",
        "webxr",
        "ui"
    ],
    "peerDependencies": {
        "@wonderlandengine/api": "^1.1.0",
        "@wonderlandengine/components": "^1.1.5",
        "gl-matrix": "^3.4.3",
        "react": "18.3.0",
        "yoga-layout": "3.2.1"
    },
    "dependencies": {
        "@types/react-reconciler": "0.28.0",
        "@wonderlandengine/prettier-config": "^1.0.0",
        "react-reconciler": "0.29.0"
    },
    "devDependencies": {
        "@esm-bundle/chai": "^4.3.4-fix.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@web/test-runner": "^0.18.2",
        "@wonderlandengine/prettier-config": "^1.0.0",
        "esbuild": "^0.25.5",
        "happy-dom": "^18.0.1",
        "prettier": "3.2.5",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4",
        "vitest-mock-extended": "^3.1.0"
    }
}
