{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2017",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "declaration": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "typeRoots": ["./node_modules/@types", "js/jsx.d.ts"]
    },
    "exclude": ["dist"],
    "include": ["./js/**/*.tsx", "./js/**/*.ts"]
}
